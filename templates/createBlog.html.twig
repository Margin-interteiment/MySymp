<!DOCTYPE html>
<html lang="ua">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
 <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="{{ asset('node_modules/swiper/swiper-bundle.min.css') }}">
    <script src="{{ asset('node_modules/swiper/swiper-bundle.min.js') }}" defer></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
 <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

</head>
<body>

    
{# {% include 'includes/header.html.twig' %} #}

 <script>
        document.addEventListener("DOMContentLoaded", function () {
            new Swiper(".mySwiper", {
                loop: true,
                 autoplay: {
                    delay: 3000,
                     disableOnInteraction: false,
                 },
                pagination: {
                    el: ".swiper-pagination",
                    clickable: true,
                },
                navigation: {
                    nextEl: ".swiper-button-next",
                    prevEl: ".swiper-button-prev",
                },
            });
        });
    </script>

    
 {% include 'includes/header.html.twig' with {
        imageUrlForHeaderOne: imageUrlForHeaderOne,
        imageUrlForHeaderTwo: imageUrlForHeaderTwo,
        imageUrlForHeaderThree: imageUrlForHeaderThree,
        imageUrlForHeaderFour: imageUrlForHeaderFour,
        imageUrlForHeaderFive: imageUrlForHeaderFive,
        logo: logo,
        homeLink: homeLink,
        aboutLink: aboutLink,
        adventureText: adventureText,
        titleOfHeader: titleOfHeader,
        currentDate: currentDate
    } %}




    <main>
   <section class="max-w-2xl mx-auto bg-white p-8 shadow-lg rounded-lg mt-10 w-[800px] h-[736px]">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">{{ createBlogTitle }}</h2>
        
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                {{ form_label(form.title, createBlogName, {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
                {{ form_widget(form.title) }}
            </div>
            <div>
                {{ form_label(form.description, createBlogDesc, {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
                {{ form_widget(form.description) }}
            </div>
            <div>
                {{ form_label(form.image, createBlogUpload, {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
                {{ form_widget(form.image) }}
            </div>
            <div>
                {{ form_widget(form.submit) }}
            </div>
        {{ form_end(form) }}
    </section>
    </main>

 {% include 'includes/footer.html.twig' %}   

</body>
</html>
