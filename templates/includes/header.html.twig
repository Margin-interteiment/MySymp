<header >
<div class="swiper mySwiper w-full h-[540px] mt-4 relative">
    <div class="swiper-wrapper">
        <div class="swiper-slide">
            <img src="{{ asset(imageUrlForHeaderOne) }}" class="w-full h-full object-cover" alt="Slide 1">
        </div>
        <div class="swiper-slide">
            <img src="{{ asset(imageUrlForHeaderTwo) }}" class="w-full h-full object-cover" alt="Slide 2">
        </div>
        <div class="swiper-slide">
            <img src="{{ asset(imageUrlForHeaderThree) }}" class="w-full h-full object-cover" alt="Slide 3">
        </div>

         <div class="swiper-slide">
            <img src="{{ asset(imageUrlForHeaderFour) }}" class="w-full h-full object-cover" alt="Slide 3">
        </div>

         <div class="swiper-slide">
            <img src="{{ asset(imageUrlForHeaderFive) }}" class="w-full h-full object-cover" alt="Slide 3">
        </div>
    </div>

    <div class="absolute top-0 left-0 w-full h-full flex flex-col justify-center items-center text-white px-4 z-10">
        <div class="bg-cover bg-center h-[80px] w-full flex items-center justify-between px-4 bg-black/50 mt-[-72px] mt-[-151px] rounded-[10px]">
            <img src="{{ logo }}" alt="logo" class="w-[65px] h-[18px] ml-[200px]" />
            <ul class="flex space-x-10 text-[18px] mr-[200px]">
                 <li><a href="{{ path('homepage') }}">{{ homeLink }}</a></li>
                 <li><a href="{{ path('about') }}">{{ aboutLink }}</a></li>
                 <li><a href="{{ path('createBlog') }}">{{ createBlog }}</a></li>
                 <li class="">
                <a href="{{ path('registration') }}">
               <img src="/images/IconLogout.png"  alt="Logout" class="w-[29px] h-[26px] relative translate-x-[153px] translate-y-[1px]">
              </a>
            </li>

            </ul>
        </div>

        <div class="header-content text-center">
            <p class="text-white bg-white/21 mt-[30px] max-w-[125px] rounded-[13px] p-[11px] ml-[267px]">{{ adventureText }}</p>
            <h1 class="text-white text-[42px] mt-[30px] max-w-[700px]">{{ titleOfHeader }}</h1>
            <p class="text-white mt-[30px]">{{ currentDate | date('d.m.Y') }}</p>
        </div>
    </div>

    
    <div class="swiper-pagination"></div>
    {# <div class="swiper-button-next "></div>
    <div class="swiper-button-prev"></div> #}
</div>
</header>
