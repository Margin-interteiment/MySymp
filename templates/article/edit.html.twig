{% extends 'base.html.twig' %}

{% block title %}
	Ваше редагування
{% endblock %}

{% block content %}

	<section class="max-w-2xl mx-auto bg-white p-8 shadow-lg rounded-lg mt-10 w-[800px] h-[736px]">


		{{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

		<div>
			{{ form_label(form.title, 'Назва', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
			{{ form_widget(form.title, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
		</div>

		<div>
			{{ form_label(form.description, 'Опис', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
			{{ form_widget(form.description, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
		</div>

		<div>
			{{ form_label(form.image, 'Завантажити зображення', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
			{{ form_widget(form.image, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
		</div>


		<div>
			{{ form_label(form.category, 'Категорія', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
			{{ form_widget(form.category, {'attr': {'class': 'bg-transparent p-2 border-2 border-gray rounded-md w-[260px]'}}) }}
		</div>


		<div>
			{{ form_widget(form.submit, {'label': 'Зберігти зміни', 'attr': {'class': 'w-full bg-black text-white font-semibold py-3 rounded-lg transition duration-300 ease-in-out hover:bg-blue-600 mt-[60px]'}}) }}
		</div>

		{{ form_end(form) }}
	</section>

{% endblock %}
